target 'Transbank_Example' do
  color(32) { puts "\nFetching Modules Pods..." }
  use_frameworks!
  pod 'Transbank', :path => '../'

#Main Pods
pod_selector(pods_environment)

  target 'Transbank_Tests' do
    inherit! :search_paths
  end
end

